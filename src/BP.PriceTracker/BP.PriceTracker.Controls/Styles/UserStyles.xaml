<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BP.PriceTracker.Controls.Styles.UserStyles">
    <Style TargetType="Button" x:Key="ChipButtonStyle">
        <!-- Loud, flat background -->
        <Setter Property="BackgroundColor" Value="{StaticResource AccentYellow}" />

        <!-- Stark, high-contrast text -->
        <Setter Property="TextColor" Value="Black" />

        <!-- Neubrutalism avoids soft rounding -->
        <Setter Property="CornerRadius" Value="15" />

        <!-- Chunky spacing -->
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="Margin" Value="6" />

        <!-- Bold typography -->
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />

        <!-- Heavy, unapologetic border -->
        <Setter Property="BorderColor" Value="Black" />
        <Setter Property="BorderWidth" Value="3" />
        <Setter Property="WidthRequest" Value="200"/>

        <!-- Flat but offset shadow for that “cut-out sticker” look -->
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="Black"
                    Offset="3,3"
                    Radius="0"
                    Opacity="0.75"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>