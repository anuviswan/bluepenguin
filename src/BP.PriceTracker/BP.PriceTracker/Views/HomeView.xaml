<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BP.PriceTracker.Views.HomeView"
             Title="HomeView"
             xmlns:viewModels="clr-namespace:BP.PriceTracker.ViewModels"
             xmlns:controls="clr-namespace:BP.PriceTracker.Controls.Controls;assembly=BP.PriceTracker.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewModels:HomeViewModel">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Loaded"
            Command="{Binding LoadDataCommand}" />
    </ContentPage.Behaviors>
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Start">
        <HorizontalStackLayout BindableLayout.ItemsSource="{Binding Tags}"  Margin="10" Padding="10">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="viewModels:TagItemEntry">
                    <controls:TagItem Text="{Binding Title}"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </HorizontalStackLayout>
        <Button Text="Next"/>
    </VerticalStackLayout>
</ContentPage>