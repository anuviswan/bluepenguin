<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BP.PriceTracker.Views.LoginView"
             xmlns:viewModels="clr-namespace:BP.PriceTracker.ViewModels"
             x:DataType="viewModels:LoginViewModel"
             >
    <Grid>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
            <Entry Placeholder="Password" Text="{Binding PassKey}" HorizontalTextAlignment="Center"
               IsPassword="True"  />
            <Button Text="Login" Command="{Binding ExecuteLoginCommand}" Style="{StaticResource RoundedButtonStyle}"/>
        </VerticalStackLayout>
        <!-- Dim overlay -->
        <BoxView 
        Color="Black" 
        Opacity="0.3" 
        IsVisible="{Binding IsBusy}" 
        HorizontalOptions="Fill" 
        VerticalOptions="Fill"
        ZIndex="9" />
        
        <ActivityIndicator 
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            Color="Blue"
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            WidthRequest="50" HeightRequest="50" />
    </Grid>
</ContentPage>