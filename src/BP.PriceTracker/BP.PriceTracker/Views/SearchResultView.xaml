<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BP.PriceTracker.Views.SearchResultView"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Search Results">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Loaded"
            Command="{Binding LoadDataCommand}" />
    </ContentPage.Behaviors>

    <VerticalStackLayout Padding="8" Spacing="10">
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HeightRequest="40" />

        <CollectionView ItemsSource="{Binding Products}" SelectionMode="None" ItemsLayout="VerticalList">
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Padding="20">
                    <Label Text="No products found" HorizontalOptions="Center" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0" RowDefinitions="Auto" ColumnDefinitions="*">
                        <!-- Large image that dominates the item -->
                        <Frame Padding="0" HasShadow="False" CornerRadius="8" Margin="0,4" BackgroundColor="#F8F8F8">
                            <Grid>
                                <Image Source="{Binding PrimaryImageUrl}" Aspect="AspectFill" HeightRequest="300" WidthRequest="1200" />
                                <!-- Optional overlay with minimal info -->
                                <StackLayout VerticalOptions="End" BackgroundColor="#80000000" Padding="8">
                                    <Label Text="{Binding ProductName}" TextColor="White" FontAttributes="Bold" LineBreakMode="TailTruncation" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>